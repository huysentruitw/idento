@model Idento.Domain.Entities.Application[]
@{ 
    ViewData["Title"] = "Applications";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Created</th>
            <th>Last modified</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var application in Model)
        {
            <tr>
                <td>@application.Name</td>
                <td>@application.DateCreated.ToString()</td>
                <td>@(application.DateUpdated?.ToString() ?? "-")</td>
                <td>
                    <a href="@Url.Action("Update", new { id = application.Id })"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a href="@Url.Action("ConfirmDelete", new { id = application.Id })"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button onclick="location.href='@Url.Action("Create")'">Add application...</button>
