@model CreateOrUpdateTenantViewModel
@{ 
    ViewData["Title"] = "Create tenant";
    ViewData["SubmitCaption"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Tenant" asp-action="Create" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">@ViewData["SubmitCaption"]</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
